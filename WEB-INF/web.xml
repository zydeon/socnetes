<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>

    <display-name>Hello, World Application</display-name>
    <description>
  This is a simple web application with a source code organization
  based on the recommendations of the Application Developer's Guide.
    </description>

    <!-- LOGIN -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>LoginSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!-- REGISTER -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>RegisterSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>  

    <!-- LOGOUT -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>LogoutSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>       

    <!-- HOME -->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>HomeSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>       

    <!-- CHAT -->
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>ChatSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>       
    
    <!-- NEW CHATROOM -->

    <servlet>
        <servlet-name>NewChat</servlet-name>
        <servlet-class>NewChatSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewChat</servlet-name>
        <url-pattern>/newChat</url-pattern>
    </servlet-mapping>       

    <!-- DELETE POST -->
    <servlet>
        <servlet-name>DeletePost</servlet-name>
        <servlet-class>DeletePostSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeletePost</servlet-name>
        <url-pattern>/deletePost</url-pattern>
    </servlet-mapping>       

    <!-- NEW POST -->
    <servlet>
        <servlet-name>NewPost</servlet-name>
        <servlet-class>NewPostSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewPost</servlet-name>
        <url-pattern>/newPost</url-pattern>
    </servlet-mapping>       

    <!-- NEW REPLY -->
    <servlet>
        <servlet-name>NewReply</servlet-name>
        <servlet-class>NewReplySv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewReply</servlet-name>
        <url-pattern>/newReply</url-pattern>
    </servlet-mapping>       

    <!-- INITIALIZER -->
    <servlet>
        <servlet-name>SocnetInitializerSv</servlet-name>
        <servlet-class>SocnetInitializerSv</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

</web-app>
